{
  "manifest_version": 2,
  "name": "GOT Anti Spoiler",
  "options_page":"options.html",
  "version": "2.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*.gif",
    "images/*.png"
    
  ],
  "permissions": [
          "storage"
        ],

  "browser_action": {
    "default_icon": "spoiler.png",
    "default_popup": "popup.html" 
  }

}